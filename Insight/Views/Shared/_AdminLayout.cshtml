                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Venue <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Add Venue", "Create", "Venue")</li>
                            <li>@Html.ActionLink("Edit Venue", "Month", "Home")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Lecture <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Add Lecture", "Create", "Lecture")</li>
                            <li>@Html.ActionLink("Edit Lecture", "Month", "Home")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Attendance <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Attendance", "Index", "Attendance")</li>
                            <li>@Html.ActionLink("Schedule Attendance", "Schedule", "Attendance")</li>
                        </ul>
                    </li>

                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div id="myModal" class="modal fade in">
        <div class="modal-dialog">
            <div class="modal-content">
                <div id="myModalContent">

                </div>
            </div>
        </div>
    </div>

    <div class="body-content" >
        @RenderBody()
    </div>
